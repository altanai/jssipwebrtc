[data-component='Settings'] {
	height: 100%;
	width: 100%;
	padding: 20px;
	overflow: auto;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background-color: rgba(#fff, 0.98);

	+desktop() {
		border-radius: 4px;
		box-shadow: 0px 0px 15px 0px rgba(#000, 0.9);
	}

	TransitionAppear(250ms);

	h1 {
		margin: 20px 0 10px 0;
		padding: 6px 16px;
		background-color: #ddd;

		&:first-child {
			margin-top: 0;
		}
	}

	.item {
		margin: 0 16px;
	}

	.separator {
		width: 100%;
		height: 20px;
	}

	> .buttons {
		flex: 0 0 auto;
		padding: 20px;
		display: flex;
		flex-direction: row;
		justify-content: space-around;
		align-items: center;
	}
}
